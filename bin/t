#! /usr/bin/env ruby
require 'rainbow'
require File.expand_path('../lib/t', File.dirname(__FILE__))


t = T.new

if ARGV.count == 0
  t.listTasks
elsif ARGV.count == 1
  t.listTasks(:done) if ARGV[0] == "-d"
  t.listTasks(:all) if ARGV[0] == "-a"
  t.clearList if ARGV[0]=="-c"
elsif ARGV.count == 2 and ARGV.first == "-m"
  puts "mark a task as done"
else
  t.addTask ARGV.join " "
end
